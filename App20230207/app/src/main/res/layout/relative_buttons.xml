<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <Button
        android:id="@+id/bt_center"
        android:layout_toRightOf="@id/bt_3"
        android:text="center"
        android:layout_below="@id/bt_1"
        android:layout_width="150dp"
        android:layout_height="150dp"/>

    <Button
        android:text="★"
        android:id="@+id/bt_1"
        android:layout_alignRight="@id/bt_center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/bt_2"
        android:text="★"
        android:layout_below="@id/bt_center"
        android:layout_alignStart="@id/bt_center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:text="★"
        android:id="@+id/bt_3"
        android:layout_alignTop="@id/bt_center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/bt_4"
        android:text="★"
        android:layout_alignBottom="@id/bt_center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/bt_5"
        android:text="★"
        android:layout_alignTop="@id/bt_center"
        android:layout_toRightOf="@id/bt_center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/bt_6"
        android:text="★"
        android:layout_alignBottom="@id/bt_center"
        android:layout_toRightOf="@id/bt_center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>